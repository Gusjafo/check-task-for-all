<%- include("header") -%>

  <style>
    @media (max-width: 640px) {
      .container {
        width: 95%;
      }
    }

    @media (min-width: 640px) and (max-width: 780px) {
      .container {
        width: 75%;
      }
    }

    @media (min-width: 780px) {
      .container {
        width: 60%;
      }
    }
  </style>

  <div class="container py-2 font-monospace">

    <div class="py-4 text-uppercase text-center" id="heading">
      <h1 id="top-page" class="fw-bold">
        <%= listTitle %> <br>
          <%= listTitle2 %>
      </h1>
    </div>

    <hr class="py-1">
    </hr>
    <% newListItems.forEach(function(item){ %>
      <div class="row">
        <div class="col-10 fs-6 fw-bold text-start me-0 pe-0">
          <%= item.numberOfTask %>
            <%= item.descriptionTask %>
        </div>
        <div class="col-2 overflow-hidden text-center p-0" style="font-size: x-small;">
          <%= item.action %> <br>
            <hr class="m-1">
            <%= item.op %>
        </div>
      </div>
      <div class="row">
        <div class="col-4 btn-group btn-group-lg p-2">
          <input type="checkbox" class="btn-check checkbox" name="<%= item.numberOfTask %>" id="<%=item._id%>"
            value="<%=item._id%>" <%=item.checkbox %> autocomplete="off">
          <label class="btn btn-outline-primary" for="<%=item._id%>">Check</label>
        </div>
        <div class="col-3 text-center mt-2">
          <div class="m-0 p-0" id="time<%= item.numberOfTask %>">
            <%= item.timeEvent %>
          </div>
          <hr class="m-1">
          <div id="by<%= item.numberOfTask %>" style="font-size: x-small;">
            <%= item.updatedBy %>
          </div>
        </div>
        <div class="col-5 p-1 ps-0">
          <div class="form-floating">
            <input type="text" class="form-control obs" id="task<%= item.numberOfTask %>" placeholder="obs"
              style="font-size: x-small;" value="<%= item.observation %>"></input>
            <label for="task<%= item.numberOfTask %>">Obs</label>
          </div>
        </div>
      </div>
      <hr class="my-2 py-1">
      </hr>
      <% }); %>
        <div class="container">
          <!-- <div class="align-items-center"> -->
          <div class="btn-group btn-group-md p-3 m-0">
            <button type="button"
              onclick="if(confirm('Esta seguro? reiniciará el listado luego de guardar.')){location.href = '/savelist';}else{return false;}"
              id="savelist" class="btn btn-dark">Save
              list</button>
            <button type="button" onclick="location.href = '/update';" class="btn btn-dark">to Update list</button>
            <button type="button" onclick="location.href = '/showhistoric';" class="btn btn-dark">to Historic list</button>
          </div>
          <div class="position-fixed bottom-0 end-0 me-2">
            <div>
              <a class="nav-link" href="#top-page">
                <button type="button" class="btn btn-secondary rounded-pill" style="box-shadow: 5px 10px 8px #888888;">▲</button>
              </a>
            </div>
            <div>
              <a class="nav-link mt-0 pt-0" href="#buttom-page">
                <button type="button" class="mb-3 btn btn-secondary rounded-pill" style="box-shadow: 5px 10px 8px #888888;">▼</button>
              </a>
            </div>
          </div>

          <input type="hidden" name="hidden" id="hidden" value="<%= userPriority %> ">
          <!-- </div> -->
        </div>



        <%- include("footer") -%>